    "terminal",
    "light mode",
    "dark mode",
    "profile"
  ],
  "repository": "github:patrik-csak/auto-terminal-profile",
  "funding": "https://www.buymeacoffee.com/patrikcsak",
  "license": "MIT",
  "author": "Patrik Csak <p@trikcsak.com>",
  "type": "module",
  "bin": "./cli.js",
  "scripts": {
